{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge - Mon Projet (Debug)",
            "url": "http://localhost/mon_projet_php/formulaire.html",  // Ou hello.php si PHP
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/opt/microsoft/msedge/msedge",  // Vérifie avec `which microsoft-edge`
            "runtimeArgs": [
                "--new-window",
                "--remote-debugging-port=9222",  // C'est la clé pour activer le debug sur ce port !
                "--disable-web-security"  // Optionnel : pour éviter les blocages CORS en dev
            ],
            "userDataDir": true,
            "port": 9222  // Assure le port pour la connexion VS Code
        }
    ]
}